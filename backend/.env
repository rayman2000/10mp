# Environment variables for 10MP Backend
# Default values for local development
# Docker will override these via environment variables in docker compose.yml

DATABASE_URL=postgresql://username:password@localhost:5432/tenmp_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tenmp_db
DB_USERNAME=username
DB_PASSWORD=password
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000
CORS_ORIGIN_ADMIN=http://localhost:3002

# Gameplay Configuration
TURN_DURATION_MINUTES=10
AUTO_SAVE_INTERVAL_MINUTES=1

# Session Configuration
DEFAULT_SESSION_ID=main-game

# Admin Configuration
ADMIN_PASSWORD=change-me-in-production

# MinIO Configuration (for local development)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET=game-saves